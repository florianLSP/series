<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abel&family=Montserrat:ital,wght@0,400;0,500;1,400&family=Raleway&display=swap"
          rel="stylesheet">
    <link rel="icon" href="{{ asset('img/icon2.png') }}">

    <title>{% block title %}Series ! {% endblock %}</title>
</head>
<body>
<div class="container">
    <header>
        <h1><a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.svg') }}" alt="Logo series"></a></h1>
        {{ include('menu/nav.html.twig') }}
        {# pass an array argument to get the messages of those types  #}
        {% for label, messages in app.flashes() %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </header>

    <main>
        {% block body %} {% endblock %}
    </main>

    <footer>
        {{ include('menu/nav.html.twig') }}
    </footer>

</div>

{% block swag %}{% endblock %}
{% block extraJs %} {% endblock %}
</body>
</html>