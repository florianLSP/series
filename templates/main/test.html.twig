{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Test
{% endblock %}

{% block body %}
    {# affichage d'une variable qui vient du controller #}
    <h1>Bonjour {{ nameOfUser }}</h1>

    <p>{{ serie.title }} : {{ serie.year }}</p><br>

    {# Création de varaible #}
    {% set name = "Eva" %}

    {# affichage d'une variable #}
    <h2>Bonjour {{ name }} !</h2>

    {# affichage d'une variable #}
    {% set colors = ['lightblue', 'pink', 'purple', 'darkred', 'green'] %}

    {# affichage du tableau #}
    {% for color in colors %}
        {% if loop.first %}
            <p>Première itération</p>
        {% endif %}
        <div style="color: {{ color }}">{{ color }}</div>
        <div>Position de l'élément {{ loop.index }} / {{ loop.length }}</div><br>

    {% endfor %}

    {# Manipulation d'objet #}
    {% set serie = {
        title : "Breaking Bad",
        year : 2008
    } %}<br>

    {# On boucle sur l'ojet #}
    <h3>Title : {{ serie.title }}</h3>
    {% for key, val in serie %}
        <p>{{ key }} : {{ val }}</p>
    {% endfor %}

    {# quelques filtres ! #}
    <h3>Filtres</h3>
    <div>{{ name | upper }} : {{ name | length }} lettres</div>
    <br>
    <div>Colors : {{ colors | join('-') }}</div>
    <br>
    <div>{{ "now" | date('Y-m-d') }}</div>

{% endblock %}
